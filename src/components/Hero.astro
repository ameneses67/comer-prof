---
// library imports
import { Image } from "@astrojs/image/components";

// image imports
import heroImage from "../images/hero-image.png";
import bgImage from "../images/banner-image.jpg";
---

<section class="flex flex-col justify-center relative">
  <div
    class="container px-4 grid grid-cols-1 md:grid-cols-2 gap-16 mx-auto my-24 sm:my-32"
  >
    <div class="flex flex-col justify-center text-center md:text-left">
      <p class="text-white text-xl font-bold mb-8">
        Compromiso y Versatibilidad
      </p>
      <h1 class="text-5xl md:text-6xl text-white font-bold">
        Distribución y venta de material médico
      </h1>
    </div>
    <div>
      <Image
        src={heroImage}
        alt="medicina virtual"
        width={600}
        format="avif"
        class="w-full h-full object-cover"
      />
    </div>
  </div>
  <div class="absolute inset-0 bg-sky-800 -z-10 opacity-90"></div>
  <Image
    src={bgImage}
    alt=""
    width={1200}
    format="avif"
    class="absolute inset-0 w-full h-full object-cover -z-20"
  />
</section>
