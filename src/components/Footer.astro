---
// library imports
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";

// image imports
import logo from "../images/logo.png";
---

<footer class="bg-slate-50">
  <div
    class="grid grid-cols-1 justify-center sm:grid-cols-3 md:grid-cols-5 text-center sm:text-left gap-x-16 gap-y-6 sm:gap-y-0 container px-4 py-8 mx-auto"
  >
    <a href="/">
      <Image
        src={logo}
        alt="logotipo"
        width={150}
        format="avif"
        class="mx-auto"
      />
    </a>
    <div class="whitespace-nowrap">
      <h2 class="font-bold mb-1">Llámanos</h2>
      <p>+52 (221) 169-1079</p>
    </div>
    <div class="whitespace-nowrap">
      <h2 class="font-bold mb-1">Visítanos</h2>
      <p>47 Poniente 1154-A</p>
      <p>Reforma Agua Azul</p>
      <p>Puebla, MX, 72430</p>
    </div>
    <div class="whitespace-nowrap">
      <h2 class="font-bold mb-1">Horario</h2>
      <p>Lun-Vie 9:00 - 18:00</p>
      <p>Sab 9:00 - 13:00</p>
    </div>
    <div class="whitespace-nowrap">
      <h2 class="font-bold mb-1">Síguenos</h2>
      <div class="flex justify-center sm:justify-start gap-2 mt-3">
        <a href="https://facebook.com" target="_blank" aria-label="Facebook">
          <div class="p-2 rounded-full bg-cyan-400">
            <Icon name="tabler:brand-facebook" class="w-5" />
          </div>
        </a>
        <a href="https://twitter.com" target="_blank" aria-label="Twitter">
          <div class="p-2 rounded-full bg-cyan-400">
            <Icon name="tabler:brand-twitter" class="w-5" />
          </div>
        </a>
        <a href="https://instagram.com" target="_blank" aria-label="Instagram">
          <div class="p-2 rounded-full bg-cyan-400">
            <Icon name="tabler:brand-instagram" class="w-5" />
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="text-center p-8 border-solid border border-t-slate-200">
    <p class="text-sky-800">
      Comercialización Profesional &copy; <span id="copyright"></span> | Derechos
      Reservados
    </p>
  </div>
</footer>

<style lang="css">
  [astro-icon] {
    color: white;
  }
</style>

<script>
  document.querySelector("#copyright").textContent = new Date()
    .getFullYear()
    .toString();
</script>
